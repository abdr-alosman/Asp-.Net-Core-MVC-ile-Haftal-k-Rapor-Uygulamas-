@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row m-5">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Yeni Hesap Oluştur . </h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Ad"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Soyad"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Unvan"></label>
                <input asp-for="Input.Unvan" class="form-control" />
                <span asp-validation-for="Input.Unvan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(SD.AdminUser))
            {
                <div class="form-group">
                    <label class="form-check-label">
                        <input type="radio" name="rdUserRole" value="@SD.EmployeeUser" checked /> @SD.EmployeeUser
                    </label>
                    <label class="form-check-label">

                        <input class="ml-3" type="radio" name="rdUserRole" value="@SD.AdminUser" /> @SD.AdminUser
                    </label>
                </div>

            }


            <button type="submit" class="btn btn-primary form-control">Register</button>
        </form>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
