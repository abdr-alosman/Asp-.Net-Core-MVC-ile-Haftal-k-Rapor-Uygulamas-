@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mb-4">


            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Kullanıcı Listesi
            </div>
            <div>
                @{
                    if (Model.Count() == 0)
                    {
                        <p class="text-danger"> Kullanıcı Bulunamadı ....</p>
                    }
                    else
                    {
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>  ID  </th>
                                        <th>   Kullanıcı Adı </th>
                                        <th>   Kullanıcı Soyadı </th>

                                        <th>   Kullanıcı Ünvanı </th>
                                        <th>   Kullanıcı Emaili </th>
                                        <th>   Kullanıcı Durumu </th>
                                    </tr>
                                    @foreach (var x in Model)
                                    {
                                        <tr>
                                            <td>@x.Id </td>
                                            <td>@x.Ad</td>
                                            <td>@x.Soyad</td>
                                            <td>@x.Unvan</td>
                                            <td>@x.Email</td>
                                            <td>
                                                @if (x.LockoutEnd == null || x.LockoutEnd < DateTime.Now)
                                                {
                                                    <a class="btn btn-success" asp-action="LockUnlock" asp-route-id="@x.Id">

                                                        <i class="fas fa-lock-open"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-danger" asp-action="LockUnlock" asp-route-id="@x.Id">

                                                        <i class="fas fa-lock"></i>
                                                    </a>
                                                }



                                            </td>

                                        </tr>
                                    }


                                </table>
                            </div>
                        </div>
                    }
                }



            </div>

        </div>
    



<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Yeni çalışan Ekle    </a>
