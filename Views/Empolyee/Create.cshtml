
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model HaftalıkRaporu.Models.ViewModels.UserRaporVM


<h2 style="color:royalblue">Yeni Rapor Ekle</h2>

<form asp-action="Create" asp-controller="Empolyee"  method="post" class="form-group" >
    <div class="">
        <br />
        <div class="form-group row" style="margin-left:10px;">

            <div class="col-2">
                <label class="col-form-label"> Rapor Tanımı : </label>

            </div>
            <div class="col-5">
                @Html.TextBoxFor(x => x.Rapor.RaporTanimi, new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group row" style="margin-left:10px;">

            <div class="col-2">
                <label class="col-form-label"> Rapolayan Kişiler </label>

            </div>
            <div class="col-5">
                @Html.TextBoxFor(x => x.Rapor.RaporlayanKisi, new { @class = "form-control" })
            </div>

        </div>


        <div class="form-group row" style="margin-left:10px;">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value=" Ekle" class="btn btn-primary form-control " />
                    </div>
                    <div class="col-6">
                        <a href="/Empolyee/Index/" class="btn btn-success form-control">Geri Dön</a>
                    </div>

                </div>


            </div>
        </div>
    </div>

</form>




