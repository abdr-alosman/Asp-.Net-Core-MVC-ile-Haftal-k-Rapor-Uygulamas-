
@{
    ViewData["Title"] = "SatirEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@model HaftalıkRaporu.Models.ViewModels.UserRaporVM



<h2 style="color:royalblue" class="ml-5"> Yeni Satır Ekle </h2>
<div class=" row ml-5" >
    <div class="col-8">

        <form asp-action="SatirEkle" method="post" class="form-group" enctype="multipart/form-data">
            <input type="hidden" asp-for="Satir.Id" />
            <input type="hidden" asp-for="Satir.RaporId" />


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group row">

                <div class="col-4">
                    <label class="col-form-label" asp-for="Satir.RaporId"> Rapor Adı : </label>

                </div>
                <div class="col-6">

                    <select class="form-control" id="ddlCategories" disabled asp-for="Rapor.Id" asp-items="@(new SelectList(Model.RaportList,"Id","RaporTanimi"))">
                    </select>

                </div>

            </div>
            <div class="form-group row" >

                <div class="col-4">
                    <label class="col-form-label"> Önem Derecesi (1 ile 5 arasında): </label>

                </div>
                <div class="col-6">

                    <input type="number" class="form-control" asp-for="Satir.OnemDerecesi" min="1" max="5">

                </div>

            </div>

            <div class="form-group row" >

                <div class="col-4">
                    <label class="col-form-label"> Başlangıç Tarihi : </label>

                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Satir.BaslangisTar" asp-format="{0:yyyy-MM-ddTHH:mm}" />


                </div>

            </div>
            <div class="form-group row">

                <div class="col-4">
                    <label class="col-form-label"> Bitiş  Tarihi : </label>

                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Satir.BitisTar" asp-format="{0:yyyy-MM-ddTHH:mm}" />


                </div>

            </div>



            <div class="form-group row">

                <div class="col-4">
                    <label class="col-form-label"> Yapılan İşler / Aksiyonlar : </label>

                </div>
                <div class="col-6">

                    @Html.TextAreaFor(m => m.Satir.YapilanIsler, new { @class = "form-control" })



                </div>

            </div>
            <div class="form-group row" >

                <div class="col-4">
                    <label class="col-form-label"> Talep Sahibi : </label>

                </div>
                <div class="col-6">

                    @Html.TextBoxFor(m => m.Satir.TalepSahibi, new { @class = "form-control" })



                </div>

            </div>
            <div class="form-group row" >
                <div class="col-4">
                    <label class="col-form-label"> Planlanmış Bitirme  Tarihi : </label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Satir.BlanlanmisTar" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                </div>
            </div>

            <div class="form-group row">

                <div class="col-4">
                    <label class="col-form-label"> Süre Aşımı/Timeout ( Evet ise işaretle) : </label>

                </div>
                <div class="col-6">
                    <input type="checkbox" asp-for="Satir.Timeout" class="form-control" />
                </div>

            </div>
            <div class="form-group row" >

                <div class="col-4">
                    <label class="col-form-label"> Tamamlanmış mı  ( Evet ise işaretle) : </label>

                </div>
                <div class="col-6">
                    <input type="checkbox" asp-for="Satir.Durumu" class="form-control" />
                </div>

            </div>

            <div class="form-group row" >

                <div class="col-4">
                    <label class="col-form-label"> Haftalık Harcanan Süre (Saat) : </label>

                </div>
                <div class="col-6">

                    @Html.TextBoxFor(m => m.Satir.HarcananSure, new { @class = "form-control" })



                </div>

            </div>
            <div class="form-group row">

                <div class="col-4">
                    <label class="col-form-label"> Yorumlar/Öneriler : </label>

                </div>
                <div class="col-6">

                    @Html.TextAreaFor(m => m.Satir.Yorumlar, new { @class = "form-control" })



                </div>

            </div>


            <div class="form-group row">
                <div class="col-6 offset-4">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" value=" Ekle" class="btn btn-primary form-control " />
                        </div>
                        <div class="col-6">
                            <a href="/Empolyee/Index" class="btn btn-success form-control">Geri Dön</a>
                        </div>

                    </div>


                </div>
            </div>



        </form>

    </div>
  
</div>
